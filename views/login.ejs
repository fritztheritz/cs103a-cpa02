

    <div class="row" style="margin: auto;">
        <h2 style="text-align:center">Welcome To The Movie Finder App</h2>
        <h4 style="text-align:center">Please either login or signup below :)</h4>

        <div class="col-sm-5">
            <h2>Login</h2>
            <form method="post" action="/login">
                username: <input type="text"
                                 autocomplete="username"
                                 name="username"><br>
                passphrase: <input  type="password"
                                    autocomplete="passphrase"
                                    name="passphrase"><br>
                <input type="submit">
            </form>
        </div>
        <h4 class="col-sm-2" style="text-align:center;">
            OR
        </h4>
        <div class="col-sm-5">
            <h2>Signup</h2>
            <form method="post" action="/signup">
                username: <input type="text" autocomplete="username" name="username"><br>
                password:
                   <input type="password" autocomplete="passphrase" name="passphrase"><br>
                confirm password:
                    <input type="password" name="passphrase2"><br>
                <input type="submit">
            </form>
        </div>
    </div>


